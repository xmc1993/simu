    <cache name="shiro-activeSessionCache"
           eternal="false"
           maxEntriesLocalHeap="2000"
           timeToIdleSeconds="3600"
           timeToLiveSeconds="0"
           overflowToDisk="false"
           statistics="true">
    </cache>
    <!-- 验证码分布式缓存-->
    <!--maxEntriesLocalHeap="2000"-->
    <cache name="jCaptchaCache"
           eternal="false"
           maxEntriesLocalHeap="2000"
           timeToIdleSeconds="360000"
           timeToLiveSeconds="0"
           overflowToDisk="false"
           statistics="true">
    </cache>

    <cache name="jpa_utils_cache"
           eternal="false"
           maxEntriesLocalHeap="20000"
           timeToIdleSeconds="360000"
           timeToLiveSeconds="0"
           overflowToDisk="false"
           statistics="true">
    </cache>

</ehcache>